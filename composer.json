{
    "name": "crustum/broadcasting",
    "description": "Broadcasting plugin for CakePHP applications",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Evgeny Tomenko",
            "homepage": "https://github.com/skie"
        }
    ],
    "require": {
        "php": ">=8.1",
        "cakephp/cakephp": "^5.1",
        "cakephp/authentication": "*",
        "cakephp/authorization": "*",
        "cakephp/queue": "^2.2",
        "firebase/php-jwt": "^6.11",
        "guzzlehttp/psr7": "^2.6",
        "pusher/pusher-php-server": "^7.2",
        "symfony/routing": "^6.0|^7.3",
        "symfony/http-foundation": "^6.0",
        "symfony/config": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "ratchet/pawl": "^0.4",
        "react/http": "^1.7",
        "cakephp/cakephp-codesniffer": "^5.0",
        "cakephp/bake": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Crustum\\Broadcasting\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "TestApp\\": "tests/TestApp/",
            "Crustum\\Broadcasting\\Test\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": "phpcs -p --standard=phpcs.xml src/ tests/",
        "cs-fix": "phpcbf --standard=phpcs.xml src/ tests/",
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "stan": "tools/phpstan analyse src/",
        "psalm": "tools/psalm --show-info=false",
        "stan-tests": "tools/phpstan analyze -c tests/phpstan.neon",
        "stan-baseline": "tools/phpstan --generate-baseline"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform-check": false
    }
}
